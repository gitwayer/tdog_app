<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="3">

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_user"
                android:inputType="number"
                android:lines="1"
                android:singleLine="true"
                android:gravity="center"
                android:hint="手 机 号" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_user"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_password"
                android:lines="1"
                android:inputType="text"
                android:gravity="center"
                android:hint="密 码" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_password"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_company_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_company_name"
                android:lines="1"
                android:inputType="text"
                android:gravity="center"
                android:hint="单 位 名 称" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_company_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_company_name"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_company_address"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/img_company_address"
                android:layout_toLeftOf="@+id/img_pos"
                android:lines="1"
                android:inputType="text"
                android:gravity="center"
                android:hint="单 位 地 址" />

            <ImageView
                android:id="@+id/img_pos"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_pos"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_principal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_company_address"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_principal_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_principal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/img_principal_name"
                android:lines="1"
                android:inputType="text"
                android:gravity="center"
                android:hint="负 责 人 姓 名" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_principal_name"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_verify_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/img_verify_code"
                android:layout_toLeftOf="@+id/fl_view"
                android:lines="1"
                android:inputType="text"
                android:gravity="center"
                android:hint="输 入 验 证 码" />
            
            <FrameLayout
                android:id="@+id/fl_view"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/btn_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"
                    android:text="获取验证码"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/img_get_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:visibility="gone"/>

            </FrameLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_corner"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
